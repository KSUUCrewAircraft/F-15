<?xml version="1.0"?>

<!-- F-15C Jettison panel Richard Harrison rjh@zaretto.com -->


<PropertyList>

    <path>jett-panel.ac</path>

    <animation>
        <type>knob</type>
        <object-name>steer-mode-selector</object-name>
        <property>sim/model/instrumentation/vhf/mode</property>
        <offset-deg>180</offset-deg>
        <factor>56</factor>
        <center>
            <x-m>-5.6935</x-m>
            <y-m>-0.0725</y-m>
            <z-m>0.9413</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z></z>
        </axis>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>sim/model/instrumentation/vhf/mode</property>
                <factor>1</factor>
                <min>0</min>
                <max>3</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>
    <animation>
        <type>slider</type>
        <object-name>jett-button</object-name>
        <property>controls/armament/emergency-jettison</property>

        <factor>-0.01</factor>
        <center>
            <x-m>0.0081</x-m>
            <y-m>-0.0017</y-m>
            <z-m>-0.0529</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>controls/armament/emergency-jettison</property>
                <factor>0.2</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>

        <release>
            <binding>
                <command>property-adjust</command>
                <property>controls/armament/emergency-jettison</property>
                <step>0</step>
                <min>0</min>
                <max>0</max>
            </binding>
        </release>
    </animation>
    <!-- Lighting -->
    <animation>
        <object-name>mount</object-name>
        <type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>/sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <factor-prop>controls/lighting/panel-norm</factor-prop>
            <red>  1.000</red>
            <green>0.576</green>
            <blue> 0.161</blue>
            <red-prop>controls/lighting/panel-red</red-prop>
            <green-prop>controls/lighting/panel-green</green-prop>
            <blue-prop>controls/lighting/panel-blue</blue-prop>

        </emission>
    </animation>
    <!-- implicit ALS lighting see http://wiki.flightgear.org/ALS_technical_notes -->
    <effect>
        <!--<name>f15panel-left</name>
        <inherits-from>Effects/f15panel-left</inherits-from>-->
        <name>f15panel-knob</name>
        <inherits-from>Effects/f15panel-knob</inherits-from>
        <object-name>steer-mode-selector</object-name>
    </effect>
  <effect>
    <name>f15panel-left</name>
    <inherits-from>Effects/f15panel-left</inherits-from>
    <object-name>panel</object-name>
  </effect>

</PropertyList>
