<?xml version="1.0"?>

<!-- F-15 Fuel Gauge by Richard Harrison rjh@zaretto.com-->

<PropertyList>
    <name>fuel-gauge</name>
    <path>fuel-gauge.ac</path>

    <animation>
        <type>select</type>
        <object-name>off-flag</object-name>
        <condition>
            <not>
                <greater-than>
                    <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                    <value>0</value>
                </greater-than>
            </not>
        </condition>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>fuel-display-selector</object-name>
        <property>sim/model/f15/controls/fuel/display-selector</property>
        <!-- or property as usual for rotate animation -->
        <factor>-45</factor>
        <offset-deg>135</offset-deg>
        <center>
            <x-m>-5.6738</x-m>
            <y-m>0.3404</y-m>
            <z-m>0.8416</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>sim/model/f15/controls/fuel/display-selector</property>
                <factor>1</factor>
                <min>0</min>
                <max>6</max>
                <wrap>false</wrap>
            </binding>
        </action>
        <!-- Release action, limit to 0 and 1. 2 is spring loaded starter position -->
        <release>
            <binding>
                <command>property-adjust</command>
                <property>sim/model/f15/controls/fuel/display-selector</property>
                <step>0</step>
                <min>1</min>
                <max>6</max>
            </binding>
        </release>
        <!-- explicit increase binding, action binding still runs too -->
        <!--<increase>
            <binding>
                <command>nasal</command>
                <script>debug.dump('was increased', cmdarg().getNode('offset').getValue());</script>
           </binding>
        </increase>-->
        <!-- explicit decrease binding, action binding still runs too -->
        <!--
        <decrease>
            <binding>....</binding>
        </decrease>-->
    </animation>

    <!-- Bingo -->
    <animation>
        <type>rotate</type>
        <object-name>bingo-bug</object-name>
        <property>sim/model/f15/controls/fuel/bingo</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>-105</dep>
            </entry>
            <entry>
                <ind>15000</ind>
                <dep>110</dep>
            </entry>
        </interpolation>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>-5.6888</x-m>
            <y-m>0.3406</y-m>
            <z-m>0.8943</z-m>
        </center>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>bingo-knob</object-name>
        <property>sim/model/f15/controls/fuel/bingo</property>
        <factor>0.048</factor>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>-5.7034</x-m>
            <y-m>0.3713</y-m>
            <z-m>0.9073</z-m>
        </center>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>sim/model/f15/controls/fuel/bingo</property>
                <factor>500</factor>
                <min>0</min>
                <max>15000</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

