        <animation>
        <object-name>TEWSImage</object-name>
        <type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>/sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <factor-prop>sim/model/f15/controls/TEWS/brightness</factor-prop>
            <red>  1</red>
            <green>1</green>
            <blue> 1</blue>
        </emission>
    </animation>
  
    
    <animation>
        <type>knob</type>
        <object-name>intensity-knob</object-name>
        <property>sim/model/f15/controls/TEWS/brightness</property>
        <factor>-110</factor>
        <center>
            <x-m>-5.6862</x-m>
            <y-m>0.2799</y-m>
            <z-m>1.0699</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>sim/model/f15/controls/TEWS/brightness</property>
                <factor>0.1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <effect>
        <name>f15interior</name>
        <inherits-from>Effects/f15interior</inherits-from>
        <object-name>TEWSImage</object-name>
    </effect>
    <effect>
        <name>f15panel-right</name>
        <inherits-from>Effects/f15panel-right</inherits-from>
        <object-name>mount</object-name>
    </effect>
    <effect>
        <name>f15panel-knob</name>
        <inherits-from>Effects/f15panel-knob</inherits-from>
        <object-name>intensity-knob</object-name>
    </effect>

</PropertyList>
