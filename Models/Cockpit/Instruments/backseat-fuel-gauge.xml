<?xml version="1.0"?>

<!-- F-15 Backseat Fuel Gauge by Richard Harrison rjh@zaretto.com
     based on the front fuel gauge.
     -->

<PropertyList>
    <name>backseat-fuel-gauge</name>
    <path>backseat-fuel-gauge.ac</path>

    <animation>
        <type>select</type>
        <object-name>off-flag</object-name>
        <condition>
            <not>
                <greater-than>
                    <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                    <value>0</value>
                </greater-than>
            </not>
        </condition>
    </animation>



    <animation>
        <type>rotate</type>
        <object-name>needle</object-name>
        <property>consumables/fuel/total-fuel-lbs</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>15000</ind>
                <dep>215</dep>
            </entry>
        </interpolation>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>-5.6888</x-m>
            <y-m>0.3406</y-m>
            <z-m>0.8943</z-m>
        </center>
    </animation>

    <!-- lighting -->
