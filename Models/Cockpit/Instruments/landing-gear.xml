<?xml version="1.0"?>

<!-- F-15 Landing gear panel by Richard Harrison; rjh@zaretto.com  -->

<PropertyList>

    <path>landing-gear.ac</path>

    <animation>
        <type>translate</type>
        <object-name>landing-gear-handle</object-name>
        <property>controls/gear/gear-down</property>
        <factor>0.0036</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>landing-gear-handle</object-name>
        <property>controls/gear/gear-down</property>
        <factor>-0.0094</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>
    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>landing-gear-handle</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-toggle</command>
                <property>controls/gear/gear-down</property>
            </binding>
        </action>
    </animation>
    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>ldg-warn-silence</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-toggle</command>
                <property>fdm/jsbsim/systems/cadc/gear-warn-silence-dmd</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>select</type>
        <object-name>light-locked-nose</object-name>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <or>
                <property>sim/model/f15/lights/master-test-lights</property>
                <equals>
                    <property>gear/gear[0]/position-norm</property>
                    <value>1</value>
                </equals>
            </or>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>light-locked-left</object-name>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <or>
                <property>sim/model/f15/lights/master-test-lights</property>
                <equals>
                    <property>gear/gear[1]/position-norm</property>
                    <value>1</value>
                </equals>
            </or>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>light-locked-right</object-name>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <or>
                <property>sim/model/f15/lights/master-test-lights</property>
                <equals>
                    <property>gear/gear[2]/position-norm</property>
                    <value>1</value>
                </equals>
            </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>landing-gear-handle-lit</object-name>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <or>
                <property>sim/model/f15/lights/master-test-lights</property>
                <property>/fdm/jsbsim/systems/cadc/gear-warning</property>
            </or>
        </condition>
    </animation>

    <!-- Lighting -->
    <animation>
        <object-name>mount</object-name>
        <type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>/sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <factor-prop>controls/lighting/panel-norm</factor-prop>
            <red>  1.000</red>
            <green>0.576</green>
            <blue> 0.161</blue>
            <red-prop>controls/lighting/panel-red</red-prop>
            <green-prop>controls/lighting/panel-green</green-prop>
            <blue-prop>controls/lighting/panel-blue</blue-prop>
        </emission>
    </animation>
    <!-- implicit ALS lighting see http://wiki.flightgear.org/ALS_technical_notes -->
    <effect>
        <name>f15panel-left</name>
        <inherits-from>Effects/f15panel-left</inherits-from>
        <object-name>landing-gear-warn-panel</object-name>
    </effect>
<!-- ALS Model Interior (Shadow) -->
    <effect>
        <name>f15interior</name>
        <inherits-from>Effects/f15interior</inherits-from>
        <object-name>mount</object-name>
    </effect>
</PropertyList>
