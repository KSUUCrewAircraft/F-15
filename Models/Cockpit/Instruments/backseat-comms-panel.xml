<?xml version="1.0"?>

<!-- F-15C backseat comms panel Richard Harrison rjh@zaretto.com;-->

<PropertyList>

    <path>backseat-comms-panel.ac</path>


    <animation>
        <type>select</type>
        <object-name>master-caution-on</object-name>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <or>
                <property>sim/model/f15/lights/master-test-lights</property>
                <property>sim/model/f15/instrumentation/warnings/master-caution</property>
            </or>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>sam-light-on</object-name>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <or>
                <property>sim/model/f15/lights/master-test-lights</property>
                <property>sim/model/f15/instrumentation/warnings/ac-sam</property>
            </or>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>ai-light-on</object-name>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <or>
                <property>sim/model/f15/lights/master-test-lights</property>
                <and>
                    <property>instrumentation/ecm/on-off</property>
                    <property>instrumentation/ecm/alert-type2</property>
                    <greater-than>
                        <property>/fdm/jsbsim/systems/electrics/ac-left-main-bus</property>
                        <value>0</value>
                    </greater-than>
                </and>
                <and>
                    <property>instrumentation/ecm/on-off</property>
                    <property>instrumentation/ecm/alert-type1</property>
                    <greater-than>
                        <property>/fdm/jsbsim/systems/electrics/ac-left-main-bus</property>
                        <value>0</value>
                    </greater-than>
                </and>
            </or>
        </condition>
    </animation>


    <!-- Master Caution Button -->
    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>master-caution-on</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <interval-sec>0.1</interval-sec>
            <binding>
                <command>nasal</command>
                <script>aircraft.master_caution_pressed()</script>
            </binding>
        </action>
    </animation>

    <!-- transponder -->
    <animation>
        <type>textranslate</type>
        <object-name>hud-mode3a-drum1</object-name>
        <property>instrumentation/transponder/inputs/digit[3]</property>
        <factor>0.1</factor>
        <step>1</step>
        <axis>
            <y>-1</y>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>hud-mode3a-drum2</object-name>
        <property>instrumentation/transponder/inputs/digit[2]</property>
        <factor>0.1</factor>
        <step>1</step>
        <axis>
            <y>-1</y>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>hud-mode3a-drum3</object-name>
        <property>instrumentation/transponder/inputs/digit[1]</property>
        <factor>0.1</factor>
        <step>1</step>
        <axis>
            <y>-1</y>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>hud-mode3a-drum4</object-name>
        <property>instrumentation/transponder/inputs/digit[0]</property>
        <factor>0.1</factor>
        <step>1</step>
        <axis>
            <y>-1</y>
        </axis>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>hud-mode3a-1</object-name>
        <property>instrumentation/transponder/inputs/digit[3]</property>
        <factor>0</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>0</z>
        </axis>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/transponder/inputs/digit[3]</property>
                <factor>1</factor>
                <min>0</min>
                <max>7</max>
                <wrap>true</wrap>
            </binding>
        </action>
    </animation>
    
    <animation>
        <type>knob</type>
        <object-name>hud-mode3a-2</object-name>
        <property>instrumentation/transponder/inputs/digit[2]</property>
        <factor>0</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>0</z>
        </axis>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/transponder/inputs/digit[2]</property>
                <factor>1</factor>
                <min>0</min>
                <max>7</max>
                <wrap>true</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>hud-mode3a-3</object-name>
        <property>instrumentation/transponder/inputs/digit[1]</property>
        <factor>0</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>0</z>
        </axis>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/transponder/inputs/digit[1]</property>
                <factor>1</factor>
                <min>0</min>
                <max>7</max>
                <wrap>true</wrap>
            </binding>
        </action>
    </animation>
    
    <animation>
        <type>knob</type>
        <object-name>hud-mode3a-4</object-name>
        <property>instrumentation/transponder/inputs/digit[0]</property>
        <factor>0</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>0</z>
        </axis>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/transponder/inputs/digit[0]</property>
                <factor>1</factor>
                <min>0</min>
                <max>7</max>
                <wrap>true</wrap>
            </binding>
        </action>
    </animation>
    <!--hud-button-mode-ip-->
    <!-- MCCP (Radio1) -->
    <animation>
        <type>textranslate</type>
        <object-name>hud-freq-drum1</object-name>
        <property>/instrumentation/comm[0]/frequencies/selected-mhz</property>
        <factor>0.001</factor>
        <step>100</step>
        <scroll>0.5</scroll>
        <axis>
            <y>-1</y>
        </axis>
    </animation>
    <animation>
        <type>textranslate</type>
        <object-name>hud-freq-drum2</object-name>
        <property>/instrumentation/comm[0]/frequencies/selected-mhz</property>
        <factor>0.01</factor>
        <step>10</step>
        <scroll>0.5</scroll>
        <axis>
            <y>-1</y>
        </axis>
    </animation>
    <animation>
        <type>textranslate</type>
        <object-name>hud-freq-drum3</object-name>
        <property>/instrumentation/comm[0]/frequencies/selected-mhz</property>
        <factor>0.1</factor>
        <step>1</step>
        <axis>
            <y>-1</y>
        </axis>
    </animation>
    <animation>
        <type>textranslate</type>
        <object-name>hud-freq-drum4</object-name>
        <property>/instrumentation/comm[0]/frequencies/selected-mhz</property>
        <factor>1</factor>
        <step>0.1</step>
        <axis>
            <y>-1</y>
        </axis>
    </animation>
    <animation>
        <type>textranslate</type>
        <object-name>hud-freq-drum5</object-name>
        <property>/instrumentation/comm[0]/frequencies/selected-mhz</property>
        <factor>10</factor>
        <step>0.01</step>
        <axis>
            <y>-1</y>p
        </axis>
    </animation>
    <animation>
        <type>textranslate</type>
        <object-name>hud-freq-drum6</object-name>
        <property>/instrumentation/comm[0]/frequencies/selected-mhz</property>
        <factor>100</factor>
        <step>0.001</step>
        <axis>
            <y>-1</y>
        </axis>
    </animation>

    <!-- Comm: Min 118.0
               Max 137.0
               Inc 0.025
               -->
    <animation>
        <type>knob</type>
        <object-name>knob-freq-uhf1</object-name>
        <property>/instrumentation/comm[0]/frequencies/selected-mhz</property>
        <factor>0.01</factor>
        <step>10</step>
        <center>
            <x-m>-4.1447</x-m>
            <y-m>-0.0248</y-m>
            <z-m>1.2897</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/comm[0]/frequencies/selected-mhz</property>
                <factor>10</factor>
                <min>118</min>
                <max>137</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>
    <animation>
        <type>knob</type>
        <object-name>knob-freq-uhf2</object-name>
        <property>/instrumentation/comm[0]/frequencies/selected-mhz</property>
        <factor>1</factor>
        <center>
            <x-m>-4.1447</x-m>
            <y-m>0.0123</y-m>
            <z-m>1.2897</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/comm[0]/frequencies/selected-mhz</property>
                <factor>1</factor>
                <min>118</min>
                <max>137</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>knob-freq-uhf3</object-name>
        <property>/instrumentation/comm[0]/frequencies/selected-mhz</property>
        <factor>10</factor>
        <center>
            <x-m>-4.1447</x-m>
            <y-m>0.0483</y-m>
            <z-m>1.2897</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>/instrumentation/comm[0]/frequencies/selected-mhz</property>
                <factor>0.025</factor>
                <min>118</min>
                <max>137</max>
                <wrap>true</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>knob-freq-volume</object-name>
        <property>instrumentation/comm/volume</property>
        <offset-deg>180</offset-deg>
        <factor>260</factor>
        <center>
            <x-m>-4.1394</x-m>
            <y-m>0.0886</y-m>
            <z-m>1.3092</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/comm/volume</property>
                <factor>0.05</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>
    <!-- lighting -->
    <animation>
        <object-name>mount</object-name>
        <type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>/sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <factor-prop>controls/lighting/panel-norm</factor-prop>
            <red>  1.000</red>
            <green>0.576</green>
            <blue> 0.161</blue>
            <red-prop>controls/lighting/panel-red</red-prop>
            <green-prop>controls/lighting/panel-green</green-prop>
            <blue-prop>controls/lighting/panel-blue</blue-prop>

        </emission>
    </animation>
    <!-- implicit ALS lighting see http://wiki.flightgear.org/ALS_technical_notes -->
    <effect>
        <name>f15panel-left</name>
        <inherits-from>Effects/f15panel-left</inherits-from>
        <object-name>hud-mode-panel</object-name>
        <object-name>hud-freq-panel</object-name>
    </effect>
    <effect>
        <name>f15panel-knob</name>
        <inherits-from>Effects/f15panel-knob</inherits-from>
        <object-name>knob-freq-volume</object-name>
        <object-name>hud-display-brt-stby-rtcl</object-name>
        <object-name>hud-display-brt-symbol</object-name>
    </effect>
    <!-- ALS Model Interior (Shadow) -->
    <effect>
        <name>f15interior</name>
        <inherits-from>Effects/f15interior</inherits-from>
        <object-name>mount</object-name>
        <object-name>instrument</object-name>
    </effect>

    <animation>
        <object-name>instrument</object-name>
        <type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>/sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <factor-prop>controls/lighting/flt-inst</factor-prop>
            <red>  0.1000</red>
            <green>0.0576</green>
            <blue> 0.0161</blue>
            <red-prop>controls/lighting/instrument-red</red-prop>
            <green-prop>controls/lighting/instrument-green</green-prop>
            <blue-prop>controls/lighting/instrument-blue</blue-prop>
        </emission>
    </animation>
</PropertyList>
