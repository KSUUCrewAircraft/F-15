<?xml version="1.0"?>

<!-- F-15 horizontal situation indicator (HSI) by Richard Harrison rjh@zaretto.com; based on A-10 by xii -->

<PropertyList>
    <name>HSI</name>
    <path>hsi.ac</path>
    <animation>
        <type>rotate</type>
        <object-name>hsi</object-name>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
        </condition>
        <property>instrumentation/heading-indicator-fg/indicated-heading-deg</property>
        <center>
            <x-m>-5.7037</x-m>
            <y-m>0.0127</y-m>
            <z-m>0.8688</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>cdi</object-name>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
        </condition>
        <property>instrumentation/heading-indicator-fg/indicated-heading-deg</property>
        <center>
            <x-m>-5.7037</x-m>
            <y-m>0.0127</y-m>
            <z-m>0.8688</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>bearing-needle-1</object-name>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
        </condition>
        <property>sim/model/f15/instrumentation/tacan/indicated-bearing-mag-deg</property>
        <axis>
            <x>-1</x>
        </axis>
        <center>
            <x-m>-5.7037</x-m>
            <y-m>0.0127</y-m>
            <z-m>0.8688</z-m>
        </center>
    </animation>

    <animation>
        <type>select</type>
        <object-name>miles-flag</object-name>
        <condition>
            <or>
                <equals>
                    <property>instrumentation/tacan/in-range</property>
                    <value>false</value>
                </equals>
                <equals>
                    <property>instrumentation/tacan/switch-position</property>
                    <value>0</value>
                </equals>
            </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>off-flag</object-name>
        <condition>
            <not>
                <greater-than>
                    <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                    <value>0</value>
                </greater-than>
            </not>
        </condition>
    </animation>

    <!-- tacan distance digital display -->
    <animation>
        <type>textranslate</type>
        <object-name>miles-drum-1</object-name>
        <property>instrumentation/tacan/indicated-distance-nm</property>
        <factor>0.1</factor>
        <offset>-1</offset>
        <axis>
            <y>-1</y>
        </axis>
    </animation>
    <animation>
        <type>textranslate</type>
        <object-name>miles-drum-2</object-name>
        <property>instrumentation/tacan/indicated-distance-nm</property>
        <factor>0.01</factor>
        <offset>-10</offset>
        <step>10</step>
        <scroll>0.5</scroll>
        <axis>
            <y>-1</y>
        </axis>
    </animation>
    <animation>
        <type>textranslate</type>
        <object-name>miles-drum-3</object-name>
        <property>instrumentation/tacan/indicated-distance-nm</property>
        <factor>0.001</factor>
        <offset>-100</offset>
        <step>100</step>
        <scroll>0.5</scroll>
        <axis>
            <y>-1</y>
        </axis>
    </animation>

    <!-- course digital display -->
    <animation>
        <type>textranslate</type>
        <object-name>course-drum-1</object-name>
        <property>instrumentation/nav[1]/radials/selected-deg</property>
        <factor>0.1</factor>
        <offset>-1</offset>
        <axis>
            <y>-1</y>
        </axis>
    </animation>
    <animation>
        <type>textranslate</type>
        <object-name>course-drum-2</object-name>
        <property>instrumentation/nav[1]/radials/selected-deg</property>
        <factor>0.01</factor>
        <offset>-10</offset>
        <step>10</step>
        <scroll>0.5</scroll>
        <axis>
            <y>-1</y>
        </axis>
    </animation>
    <animation>
        <type>textranslate</type>
        <object-name>course-drum-3</object-name>
        <property>instrumentation/nav[1]/radials/selected-deg</property>
        <factor>0.001</factor>
        <offset>-100</offset>
        <step>100</step>
        <scroll>0.5</scroll>
        <axis>
            <y>-1</y>
        </axis>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>course-knob</object-name>
        <property>instrumentation/nav[1]/radials/selected-deg</property>
        <center>
            <x-m>-5.6812</x-m>
            <y-m>0.0622</y-m>
            <z-m>0.829</z-m>
        </center>
        <axis>
            <x>-1</x>
        </axis>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/nav[1]/radials/selected-deg</property>
                <factor>1</factor>
                <min>0</min>
                <max>360</max>
                <wrap>true</wrap>
            </binding>
        </action>
    </animation>

    <animation>
        <type>knob</type>
        <object-name>heading-set-knob</object-name>
        <property>instrumentation/heading-indicator-fg/offset-deg</property>
        <center>
            <x-m>-5.6812</x-m>
            <y-m>-0.0359</y-m>
            <z-m>0.8286</z-m>
        </center>
        <axis>
            <x>-1</x>
        </axis>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/heading-indicator-fg/offset-deg</property>
                <factor>1</factor>
                <min>0</min>
                <max>360</max>
                <wrap>true</wrap>
            </binding>
        </action>
    </animation>


    <!-- ============ CDI =========== -->

    <!-- HSI-course-card -->
    <animation>
        <type>rotate</type>
        <object-name>HSI-course-card</object-name>
        <property>instrumentation/nav[1]/radials/selected-deg</property>
        <axis>
            <x>-1</x>
        </axis>
        <center>
            <x-m>-5.7037</x-m>
            <y-m>0.0127</y-m>
            <z-m>0.8688</z-m>
        </center>
    </animation>

    <!--bearing-validity-flag-->
    <animation>
        <type>select</type>
        <object-name>bearing-validity-flag</object-name>
        <condition>
            <or>
                <and>
                    <equals>
                        <property>instrumentation/nav[0]/in-range</property>
                        <value>false</value>
                    </equals>
                    <equals>
                        <property>sim/model/f15/f15-nav/selector-ils</property>
                        <value>true</value>
                    </equals>
                </and>
                <and>
                    <equals>
                        <property>instrumentation/tacan/in-range</property>
                        <value>false</value>
                    </equals>
                    <equals>
                        <property>instrumentation/tacan/switch-position</property>
                        <value>1</value>
                    </equals>
                </and>
                <and>
                    <equals>
                        <property>sim/model/f15/f15-nav/selector-ils</property>
                        <value>false</value>
                    </equals>
                    <equals>
                        <property>instrumentation/tacan/switch-position</property>
                        <value>0</value>
                    </equals>
                </and>
            </or>
        </condition>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>bearing-validity-flag</object-name>
        <property>instrumentation/nav[1]/radials/selected-deg</property>
        <axis>
            <x>-1</x>
        </axis>
        <center>
            <x-m>-5.7037</x-m>
            <y-m>0.0127</y-m>
            <z-m>0.8688</z-m>
        </center>
    </animation>

    <!--course-deviation-indicator off (CDI)-->
    <animation>
        <type>select</type>
        <object-name>course-deviation-indicator-off</object-name>
        <condition>
            <or>
                <not>
                    <greater-than>
                        <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                        <value>0</value>
                    </greater-than>
                </not>
                <and>
                    <equals>
                        <property>sim/model/f15/f15-nav/selector-ils</property>
                        <value>false</value>
                    </equals>
                    <equals>
                        <property>instrumentation/tacan/switch-position</property>
                        <value>0</value>
                    </equals>
                </and>
                <and>
                    <equals>
                        <property>instrumentation/tacan/switch-position</property>
                        <value>1</value>
                    </equals>
                    <equals>
                        <property>instrumentation/tacan/in-range</property>
                        <value>false</value>
                    </equals>
                </and>
            </or>
        </condition>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>course-deviation-indicator-off</object-name>
        <property>instrumentation/nav[1]/radials/selected-deg</property>
        <axis>
            <x>-1</x>
        </axis>
        <center>
            <x-m>-5.7037</x-m>
            <y-m>0.0127</y-m>
            <z-m>0.8688</z-m>
        </center>
    </animation>

    <!--  ILS on CDI  -->
    <!-- ils course-deviation-indicator on-->
    <animation>
        <type>select</type>
        <object-name>course-deviation-indicator-on</object-name>
        <condition>
            <equals>
                <property>sim/model/f15/f15-nav/selector-ils</property>
                <value>true</value>
            </equals>
        </condition>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>course-deviation-indicator-on</object-name>
        <property>instrumentation/nav[1]/radials/selected-deg</property>
        <axis>
            <x>-1</x>
        </axis>
        <center>
            <x-m>-5.7037</x-m>
            <y-m>0.0127</y-m>
            <z-m>0.8688</z-m>
        </center>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>course-deviation-indicator-on</object-name>
        <property>instrumentation/nav[0]/heading-needle-deflection</property>
        <interpolation>
            <entry>
                <ind>-10</ind>
                <dep>-0.024</dep>
            </entry>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>10</ind>
                <dep>0.024</dep>
            </entry>
        </interpolation>
        <axis>
            <y>1</y>
        </axis>
    </animation>
    <!-- ils to-from (to)-->
    <animation>
        <type>select</type>
        <object-name>to-from-to</object-name>
        <condition>
            <equals>
                <property>instrumentation/nav[0]/to-flag</property>
                <value>true</value>
            </equals>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <equals>
                <property>sim/model/f15/f15-nav/selector-ils</property>
                <value>true</value>
            </equals>
        </condition>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>to-from-to</object-name>
        <property>instrumentation/nav[1]/radials/selected-deg</property>
        <axis>
            <x>-1</x>
        </axis>
        <center>
            <x-m>-5.7037</x-m>
            <y-m>0.0127</y-m>
            <z-m>0.8688</z-m>
        </center>
    </animation>
    <!-- ils to-from (from)-->
    <animation>
        <type>select</type>
        <object-name>to-from-from</object-name>
        <condition>
            <equals>
                <property>instrumentation/nav[0]/from-flag</property>
                <value>true</value>
            </equals>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <equals>
                <property>sim/model/f15/f15-nav/selector-ils</property>
                <value>true</value>
            </equals>
        </condition>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>to-from-from</object-name>
        <property>instrumentation/nav[1]/radials/selected-deg</property>
        <axis>
            <x>-1</x>
        </axis>
        <center>
            <x-m>-5.7037</x-m>
            <y-m>0.0127</y-m>
            <z-m>0.8688</z-m>
        </center>
    </animation>

    <!--  TACAN on CDI  -->
    <!-- tacan course-deviation-indicator on-->
    <animation>
        <type>select</type>
        <object-name>tcn-course-deviation-indicator-on</object-name>
        <condition>
            <equals>
                <property>instrumentation/tacan/in-range</property>
                <value>true</value>
            </equals>
            <equals>
                <property>instrumentation/tacan/switch-position</property>
                <value>1</value>
            </equals>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
        </condition>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>tcn-course-deviation-indicator-on</object-name>
        <property>instrumentation/nav[1]/radials/selected-deg</property>
        <axis>
            <x>-1</x>
        </axis>
        <center>
            <x-m>-5.7037</x-m>
            <y-m>0.0127</y-m>
            <z-m>0.8688</z-m>
        </center>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>tcn-course-deviation-indicator-on</object-name>
        <property>sim/model/f15/instrumentation/cdi/needle-deflection</property>
        <interpolation>
            <entry>
                <ind>-10</ind>
                <dep>-0.024</dep>
            </entry>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>10</ind>
                <dep>0.024</dep>
            </entry>
        </interpolation>
        <axis>
            <y>1</y>
        </axis>
    </animation>
    <!-- tacan to-from (to)-->
    <animation>
        <type>select</type>
        <object-name>tcn-to-from-to</object-name>
        <condition>
            <equals>
                <property>sim/model/f15/instrumentation/cdi/to-flag</property>
                <value>true</value>
            </equals>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <equals>
                <property>instrumentation/tacan/switch-position</property>
                <value>1</value>
            </equals>
        </condition>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>tcn-to-from-to</object-name>
        <property>instrumentation/nav[1]/radials/selected-deg</property>
        <axis>
            <x>-1</x>
        </axis>
        <center>
            <x-m>-5.7037</x-m>
            <y-m>0.0127</y-m>
            <z-m>0.8688</z-m>
        </center>
    </animation>
    <!-- tacan to-from (from)-->
    <animation>
        <type>select</type>
        <object-name>tcn-to-from-from</object-name>
        <condition>
            <equals>
                <property>sim/model/f15/instrumentation/cdi/from-flag</property>
                <value>true</value>
            </equals>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <equals>
                <property>instrumentation/tacan/switch-position</property>
                <value>1</value>
            </equals>
        </condition>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>tcn-to-from-from</object-name>
        <property>instrumentation/nav[1]/radials/selected-deg</property>
        <axis>
            <x>-1</x>
        </axis>
        <center>
            <x-m>-5.7037</x-m>
            <y-m>0.0127</y-m>
            <z-m>0.8688</z-m>
        </center>
    </animation>


    <!-- lighting -->
    <animation>
        <object-name>mount</object-name>
        <type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>/sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <factor-prop>controls/lighting/panel-norm</factor-prop>
            <red>  1.000</red>
            <green>0.576</green>
            <blue> 0.161</blue>
            <red-prop>controls/lighting/panel-red</red-prop>
            <green-prop>controls/lighting/panel-green</green-prop>
            <blue-prop>controls/lighting/panel-blue</blue-prop>

        </emission>
    </animation>

    <animation>
        <object-name>instrument</object-name>
        <type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>/sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <factor-prop>controls/lighting/flt-inst</factor-prop>
            <red>  0.1000</red>
            <green>0.0576</green>
            <blue> 0.0161</blue>
            <red-prop>controls/lighting/instrument-red</red-prop>
            <green-prop>controls/lighting/instrument-green</green-prop>
            <blue-prop>controls/lighting/instrument-blue</blue-prop>
        </emission>
    </animation>
<!-- ALS Model Interior (Shadow) -->
    <effect>
        <name>f15interior</name>
        <inherits-from>Effects/f15interior</inherits-from>
        <object-name>mount</object-name>
        <object-name>instrument</object-name>
    </effect>
</PropertyList>
