<?xml version="1.0"?>

<!-- F-15 Acceleration (G) Gauge by Richard Harrison rjh@zaretto.com ; based on F-14B by xiii -->

<PropertyList>
    <path>accel.ac</path>
    <animation>
        <type>rotate</type>
        <object-name>needle</object-name>
        <property>accelerations/pilot-gdamped</property>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
        </condition>
        <interpolation>
            <entry>
                <ind>-5</ind>
                <dep>-202.5</dep>
            </entry>
            <entry>
                <ind>-4</ind>
                <dep>-112.5</dep>
            </entry>
            <entry>
                <ind>-3</ind>
                <dep>-90</dep>
            </entry>
            <entry>
                <ind>-1</ind>
                <dep>-45</dep>
            </entry>
            <entry>
                <ind>0</ind>
                <dep>-22.5</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>3</ind>
                <dep>45</dep>
            </entry>
            <entry>
                <ind>5</ind>
                <dep>90</dep>
            </entry>
            <entry>
                <ind>7</ind>
                <dep>135</dep>
            </entry>
            <entry>
                <ind>9</ind>
                <dep>180</dep>
            </entry>
            <entry>
                <ind>10</ind>
                <dep>202.5</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>-5.7096</x-m>
            <y-m>-0.133</y-m>
            <z-m>0.856</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>needle-max</object-name>
        <property>sim/model/f15/instrumentation/g-meter/g-max</property>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
        </condition>
        <interpolation>
            <entry>
                <ind>-5</ind>
                <dep>-202.5</dep>
            </entry>
            <entry>
                <ind>-4</ind>
                <dep>-112.5</dep>
            </entry>
            <entry>
                <ind>-3</ind>
                <dep>-90</dep>
            </entry>
            <entry>
                <ind>-1</ind>
                <dep>-45</dep>
            </entry>
            <entry>
                <ind>0</ind>
                <dep>-22.5</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>3</ind>
                <dep>45</dep>
            </entry>
            <entry>
                <ind>5</ind>
                <dep>90</dep>
            </entry>
            <entry>
                <ind>7</ind>
                <dep>135</dep>
            </entry>
            <entry>
                <ind>9</ind>
                <dep>180</dep>
            </entry>
            <entry>
                <ind>10</ind>
                <dep>202.5</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>-5.7096</x-m>
            <y-m>-0.133</y-m>
            <z-m>0.856</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>needle-min</object-name>
        <property>sim/model/f15/instrumentation/g-meter/g-min</property>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
        </condition>
        <interpolation>
            <entry>
                <ind>-5</ind>
                <dep>-202.5</dep>
            </entry>
            <entry>
                <ind>-4</ind>
                <dep>-112.5</dep>
            </entry>
            <entry>
                <ind>-3</ind>
                <dep>-90</dep>
            </entry>
            <entry>
                <ind>-1</ind>
                <dep>-45</dep>
            </entry>
            <entry>
                <ind>0</ind>
                <dep>-22.5</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>3</ind>
                <dep>45</dep>
            </entry>
            <entry>
                <ind>5</ind>
                <dep>90</dep>
            </entry>
            <entry>
                <ind>7</ind>
                <dep>135</dep>
            </entry>
            <entry>
                <ind>9</ind>
                <dep>180</dep>
            </entry>
            <entry>
                <ind>10</ind>
                <dep>202.5</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>-5.7096</x-m>
            <y-m>-0.133</y-m>
            <z-m>0.856</z-m>
        </center>
        <axis>
            <x>-1</x>
        </axis>
    </animation>
    <animation>
        <type>pick</type>
        <object-name>reset-button</object-name>
        <visible>false</visible>
        <action>
            <name>cmd-on-off-switch-up</name>
            <button>0</button>
            <x>-205</x>
            <y>20</y>
            <w>70</w>
            <h>70</h>
            <repeatable type="bool">true</repeatable>
            <binding>
                <command>property-assign</command>
                <property>sim/model/f15/instrumentation/g-meter/g-max</property>
                <value>1</value>
            </binding>
            <binding>
                <command>property-assign</command>
                <property>sim/model/f15/instrumentation/g-meter/g-min</property>
                <value>1</value>
            </binding>
        </action>
    </animation>

    <!-- Lighting -->
    <animation>
        <object-name>mount</object-name>
        <type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>/sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <factor-prop>controls/lighting/panel-norm</factor-prop>
            <red>  1.000</red>
            <green>0.576</green>
            <blue> 0.161</blue>
            <red-prop>controls/lighting/panel-red</red-prop>
            <green-prop>controls/lighting/panel-green</green-prop>
            <blue-prop>controls/lighting/panel-blue</blue-prop>
        </emission>
    </animation>

    <animation>
        <object-name>instrument</object-name>
        <type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>/sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <factor-prop>controls/lighting/flt-inst</factor-prop>
            <red>  0.1000</red>
            <green>0.0576</green>
            <blue> 0.0161</blue>
            <red-prop>controls/lighting/instrument-red</red-prop>
            <green-prop>controls/lighting/instrument-green</green-prop>
            <blue-prop>controls/lighting/instrument-blue</blue-prop>

        </emission>
    </animation>
<!-- ALS Model Interior (Shadow) -->
    <effect>
        <name>f15interior</name>
        <inherits-from>Effects/f15interior</inherits-from>
        <object-name>mount</object-name>
        <object-name>instrument</object-name>
    </effect>
</PropertyList>
