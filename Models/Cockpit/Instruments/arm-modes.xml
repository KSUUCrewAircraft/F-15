<?xml version="1.0"?>

<!-- F-15 Arm Mode panel by Richard Harrison rjh@zaretto.com-->

<PropertyList>

    <path>arm-modes.ac</path>

    <animation>
        <type>select</type>
        <object-name>beacon-on</object-name>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <or>
                <property>sim/model/f15/lights/master-test-lights</property>
            </or>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>ag-light-on</object-name>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <or>
                <property>sim/model/f15/lights/master-test-lights</property>
                <property>controls/armament/ag-mode</property>
            </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>adi-light-on</object-name>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <or>
                <property>sim/model/f15/lights/master-test-lights</property>
                <property>controls/armament/adi-mode</property>
            </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>vi-light-on</object-name>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <or>
                <property>sim/model/f15/lights/master-test-lights</property>
                <property>controls/armament/vi-mode</property>
            </or>
        </condition>
    </animation>

    <animation>
        <type>slider</type>
        <object-name>ag-button</object-name>
        <property>controls/armament/ag-mode</property>

        <factor>0.0044</factor>
        <center>
            <x-m>0.0081</x-m>
            <y-m>-0.0017</y-m>
            <z-m>-0.0529</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>controls/armament/ag-mode</property>
                <factor>1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>


    <animation>
        <type>slider</type>
        <object-name>adi-button</object-name>
        <property>controls/armament/adi-mode</property>

        <factor>0.0044</factor>
        <center>
            <x-m>0.0081</x-m>
            <y-m>-0.0017</y-m>
            <z-m>-0.0529</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>controls/armament/adi-mode</property>
                <factor>1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>ag-light-on</object-name>
        <property>controls/armament/ag-mode</property>

        <factor>0.0044</factor>
        <center>
            <x-m>0.0081</x-m>
            <y-m>-0.0017</y-m>
            <z-m>-0.0529</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>adi-light-on</object-name>
        <property>controls/armament/adi-mode</property>

        <factor>0.0044</factor>
        <center>
            <x-m>0.0081</x-m>
            <y-m>-0.0017</y-m>
            <z-m>-0.0529</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>vi-light-on</object-name>
        <property>controls/armament/vi-mode</property>

        <factor>0.0044</factor>
        <center>
            <x-m>0.0081</x-m>
            <y-m>-0.0017</y-m>
            <z-m>-0.0529</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>slider</type>
        <object-name>vi-button</object-name>
        <property>controls/armament/vi-mode</property>

        <factor>0.0044</factor>
        <center>
            <x-m>0.0081</x-m>
            <y-m>-0.0017</y-m>
            <z-m>-0.0529</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>

        <action>
            <binding>
                <command>property-adjust</command>
                <property>controls/armament/vi-mode</property>
                <factor>1</factor>
                <min>0</min>
                <max>1</max>
                <wrap>false</wrap>
            </binding>
        </action>
    </animation>


    <!-- Lighting -->

    <animation>
        <object-name>mount</object-name>
        <type>material</type>
        <condition>
            <greater-than>
                <property>/fdm/jsbsim/systems/electrics/ac-essential-bus1</property>
                <value>0</value>
            </greater-than>
            <not>
                <property>/sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
        <emission>
            <factor-prop>controls/lighting/panel-norm</factor-prop>
            <red>  1.000</red>
            <green>0.576</green>
            <blue> 0.161</blue>
            <red-prop>controls/lighting/panel-red</red-prop>
            <green-prop>controls/lighting/panel-green</green-prop>
            <blue-prop>controls/lighting/panel-blue</blue-prop>

        </emission>
    </animation>
    <!-- implicit ALS lighting see http://wiki.flightgear.org/ALS_technical_notes -->
    <effect>
        <name>f15panel-left</name>
        <inherits-from>Effects/f15panel-right</inherits-from>
        <object-name>arm-models-panel</object-name>
    </effect>
    
</PropertyList>
